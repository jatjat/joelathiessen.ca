{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "src"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": ["build", "dist", "node_modules", "__tests__"],
  "types": ["node", "webpack", "react", "react-dom", "reactstrap"],
  "include": ["**/*.ts"],
  "compileOnSave": false
}
